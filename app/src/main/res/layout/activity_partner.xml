<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pozadie">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="600dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.483">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="@string/uloha_partner"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="20dp"/>



    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="260dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewPartnerKoleso"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/koleso6" />

        <ImageView
            android:id="@+id/imageViewPartnerPointer"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/pointerfin"
            android:layout_marginEnd="10dp"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="260dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textPartner1"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@color/purple_200"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginEnd="20dp"
                />

            <TextView
                android:id="@+id/textPartner2"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@color/purple_200"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>